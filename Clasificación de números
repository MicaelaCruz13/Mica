// 13) Clasificación de Números
void clasificacionNumeros() {
    int numero;

    printf("Ingrese un número entero: ");
    scanf("%d", &numero);

    if (numero == 0) {
        printf("El número es cero.\n");
    } else if (numero > 0) {
        printf("El número es positivo.\n");
        if (numero % 2 == 0) {
            printf("Además, es par.\n");
        } else {
            printf("Además, es impar.\n");
        }
    } else {
        printf("El número es negativo.\n");
    }
}
