// 5) División
void divisionDecimales() {
    float num1, num2, division;

    printf("Ingrese el primer número decimal: ");
    scanf("%f", &num1);
    printf("Ingrese el segundo número decimal: ");
    scanf("%f", &num2);

    if (num2 != 0) {
        division = num1 / num2;
        printf("La división es: %.2f\n", division);
    } else {
        printf("Error: No se puede dividir por cero.\n");
    }
}
